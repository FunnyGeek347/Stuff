import math
from math import pi
class Area_of_Circle:
  def area(self):
    return self.pi * self.radius * self.radius
  def __init__(self, radius):
    self.pi = pi
    self.radius = radius
    
class Perimeter_of_Circle:
  def perimeter(self):
    return 2 * self.pi * self.radius
  def __init__(self, radius):
    self.pi = pi
    self.radius = radius
    
area = Area_of_Circle(12)
perimeter = Perimeter_of_Circle(12)

print(area.area())
print(perimeter.perimeter())
